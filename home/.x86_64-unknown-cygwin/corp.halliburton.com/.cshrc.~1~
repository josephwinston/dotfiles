# /bin/csh -f

#
# $Id: //depot/Jody/main/jody/.i686-unknown-linux/xprtcc.com/.cshrc#12 $
#

#
# Use the C Shell
#

set path = (/sbin)		# Set the path just /sbin
if ( -d /opt/xemacs/bin ) then
    set path = ( $path /opt/xemacs/bin )
endif
set path = ( $path /bin )
set path = ( $path /usr/sbin )
if ( -d /usr/absoft/bin ) then
    set path = ( $path /usr/absoft/bin )
endif
set path = ( $path /usr/bin )
set path = ( $path /usr/X11R6/bin )
set path = ( $path /usr/local/bin )
if ( -d /opt/perforce/bin ) then
    set path = ( $path /opt/perforce/bin )
endif
if ( -d /usr/java/jdk1.3.1_01/bin ) then
    set path = ( $path /usr/java/jdk1.3.1_01/bin )
endif
if ( -d ~/src/Tools/CORBA/omni/bin/i586_linux_2.0_glibc2.1 ) then
    set path = ( $path ~/src/Tools/CORBA/omni/bin/i586_linux_2.0_glibc2.1)
endif
if ( -d /opt/ilu/bin ) then
    set path = ( $path /opt/ilu/bin )
endif
if ( -d  /opt/vtk/bin ) then
    set path = ( $path /opt/vtk/bin )
endif
if ( -d  /opt/wxWindows/bin ) then
    set path = ( $path /opt/wxWindows/bin )
endif
if ( -d  /opt/gv1.5/bin ) then
    set path = ( $path /opt/gv1.5/bin )
endif
if ( -d  /opt/Acrobat5/bin )  then
    set path = ( $path /opt/Acrobat5/bin ) 
endif
if ( -d  /opt/tnef/bin )  then
    set path = ( $path /opt/tnef/bin ) 
endif
if ( -d  /opt/lclint/bin )  then
    set path = ( $path /opt/lclint/bin ) 
endif
if ( -d  /opt/gtk+extra/bin ) then
    set path = ( $path /opt/gtk+extra/bin )
endif
if ( -d  /opt/sg/bin ) then
    set path = ( $path /opt/sg/bin )
endif
if ( -d  /opt/latex2html/bin ) then
    set path = ( $path /opt/latex2html/bin )
endif
if ( -d  /opt/netscape ) then # Override the builtin netscape then
    set path = ( /opt/netscape $path ) # Override the builtin netscape
endif
if ( -d  /opt/fetchmail/bin ) then # Override the builtin fetchmail then
    set path = ( /opt/fetchmail/bin $path ) # Override the builtin fetchmail
endif
set path = ( $path /usr/games )

# set path = ( $path ~/src/Customers/Halliburton/dpptools/bin)

if ($?prompt != 0) then
   # Only set if interactive
   stty erase "^?" 
endif

